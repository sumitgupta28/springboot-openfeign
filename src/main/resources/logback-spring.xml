<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Include Spring Boot's default logging configuration -->
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>
    <!-- Define a property for the application name, useful for log file naming -->
    <springProperty scope="context" name="APP_NAME" source="spring.application.name" defaultValue="springboot-openfeign"/>

    <!-- Console Appender -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <!-- Use Spring Boot's default console log pattern -->
            <pattern>${CONSOLE_LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <!-- Root Logger Configuration -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>

    <!-- Example of a specific logger for a package -->
    <logger name="com.openfeign" level="DEBUG" additivity="false">
        <appender-ref ref="CONSOLE"/>
    </logger>

    <!-- Example of profile-specific configuration -->
    <springProfile name="local">
        <root level="DEBUG">
            <appender-ref ref="CONSOLE"/>
        </root>
    </springProfile>

</configuration>